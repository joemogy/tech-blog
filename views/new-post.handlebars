
<section class="post-section">
  <h2>Create New Post</h2>

  <form class="new-post-form">
    <div>
      <label for="post-title">Title</label>
      <input type="text" id="post-title" size="60" name="post-title" />
    </div>
    <div>
      <label for="post-text">Content</label>
      <textarea name="post-text" id="post-text-area"></textarea>
    </div>
    <button type="submit" class="btn" id="post-add-btn">Create Post</button>
  </form>
</section>

<script src="/JS/add-post.js"></script>